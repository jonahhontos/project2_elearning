<div class="row">
  <div class="title">
    <h1>New Instructor</h1>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <%= form_for @instructor do |f| %>
      <div class="subject-label">Name</div>
      <%= f.text_field :name,class: "form-control" %><br>
      <div class="subject-label">Password</div>
      <%= f.password_field :password,class: "form-control" %><br>
      <%= f.submit "Create Instructor", class: "btn btn-default" %>
    <% end %>

  </div>
</div>

<%= link_to "Back", root_path, class: "btn btn-default" %>
