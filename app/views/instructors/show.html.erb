<div class ="title"><h1><%= @instructor.name %>'s Courses</h1></div>
<% if session[:instructor_id] == @instructor.id %>
  <%= link_to "New Course", new_course_path %>
<% end %>
<% @instructor.courses.each do |c| %>
  <div class="course">
    <h4><%= link_to c.name, course_path(c) %></h4>
    <p><%= link_to c.subject.name, subject_path(c.subject) %></p>
    <p>Enrolled students: <%= c.students.count %></p>
    <% if session[:instructor_id] == @instructor.id %>
      <%= link_to "Edit", edit_course_path(c) %> | <%= link_to "Delete", course_path(c), method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
  </div>
<% end %>
