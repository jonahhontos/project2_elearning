<h1><%= @instructor.name %>'s Courses</h1>
<%= link_to "New Course", new_course_path %>
<% @instructor.courses.each do |c| %>
  <div class="course">
    <h4><%= link_to c.name, "#" %></h4>
    <p><%= link_to c.subject, "#" %></p>
    <p><%= c.students.count %></p>
    <%= link_to "Edit", edit_course_path(c) %> <%= link_to "Delete", "#" %>
  </div>
<% end %>
