<div class="row">
  <div class="title">
    <h1><%= @concept.course.name %></h1>
    <h2><%= @concept.name %></h2>
  </div>
</div>

<%= form_for @concept do |f| %>
  <div class="row">
    <div class="form-group">
      <%= f.text_field :name, :placeholder => "Concept Name", class: "form-control"%><br>
      <%= f.text_area :content, :placeholder => "Concept Content", class: "form-control" %><br>
      <%= f.submit "Update Concept", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
<%= link_to "Back", course_path(@concept.course), class: "btn btn-default" %>
