<h1><%= @course.name %></h1>
<% @course.concepts.each do |c| %>
  <div class="concept">
    <h4><%= link_to c.name, concept_path(c) %></h4>
    <p>Exercises: <%= c.exercises.count %></p>
    <% if session[:instructor_id] == @course.instructor.id %>
      <p><%= link_to "Edit", edit_concept_path(c) %> | <%= link_to "Delete", concept_path(c), method: :delete, data: {confirm: "Are you sure?"} %></p>
    <% end %>
  </div>
<% end %>
<% if session[:instructor_id] == @course.instructor.id %>
  <%= link_to "Add Concept", new_concept_path + '/' + @course.id.to_s %><br>
<% end %>
<%= link_to "Back", instructor_path(@course.instructor) %>
